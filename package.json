{
  "name": "botan-server",
  "version": "1.0.0",
  "description": "Automated FTP data extraction and JSON API server for AI integration",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "convert": "ts-node src/server.ts convert",
    "sync": "ts-node src/server.ts sync",
    "sync-and-convert": "ts-node src/server.ts sync-and-convert",
    "test-ftp": "ts-node src/server.ts test-ftp",
    "status": "ts-node src/server.ts status",
    "deploy": "npm run build && pm2 start ecosystem.config.js --env production",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rd /s /q dist 2>nul || true",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "ftp",
    "xml",
    "json",
    "api",
    "ai",
    "data-pipeline",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "ftp": "^0.3.10",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.3",
    "@types/ftp": "^0.3.36",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
